<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/area1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="工作中"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:background="@mipmap/working_mod2"
        app:layout_constraintBottom_toTopOf="@id/area3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintHeight_percent="0.28"
         />

    <TextView
        android:id="@+id/area2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/time_mod2"
        android:gravity="center"
        android:text="05:28"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/area5"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintLeft_toRightOf="@+id/area1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.48" />


    <TextView
        android:id="@+id/area3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/flow_mod2"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:paddingBottom="30sp"
        android:text="14"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.68"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/area4"
        app:layout_constraintTop_toBottomOf="@+id/area1"
        app:layout_constraintWidth_percent="0.32" />

    <TextView
        android:id="@+id/area4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/fio2_mod2"
        android:gravity="center"
        android:paddingBottom="30sp"
        android:text="21"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintLeft_toRightOf="@+id/area3"
        app:layout_constraintRight_toLeftOf="@+id/area5"
        app:layout_constraintTop_toBottomOf="@+id/area1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.68"
        app:layout_constraintWidth_percent="0.32" />


    <TextView
        android:id="@+id/area5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@mipmap/temperature_mod2"
        android:gravity="center"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="34"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:paddingBottom="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/area4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area2"
        app:layout_constraintHeight_percent="0.68"
        app:layout_constraintWidth_percent="0.32" />


</android.support.constraint.ConstraintLayout>